        </tbody>
    </table>

    <a href="{{ path('actor_index') }}"><button type="button" class="btn btn-secondary">back to list</button></a>

    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}"><button type="button" class="btn btn-secondary">edit</button></a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
