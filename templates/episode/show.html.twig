{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}"><button type="button" class="btn btn-secondary">back to list</button></a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}"></a><button type="button" class="btn btn-secondary">edit</button>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
